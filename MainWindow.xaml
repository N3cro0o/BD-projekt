<Window x:Class="BD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        xmlns:views="clr-namespace:BD.Views"
        xmlns:viewmodels="clr-namespace:BD.ViewModels"
        xmlns:models="clr-namespace:BD.Models"
        mc:Ignorable="d"
        Title="Baza danych" Height="450" Width="800" WindowState="Normal" ResizeMode="CanResize"
        MinHeight="450" MinWidth="800">
    <Window.Resources>
        <DataTemplate x:Name="MainPageTemplate" DataType="{x:Type viewmodels:MainPageMV}">
            <views:MainPage DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="LoginPageTemplate" DataType="{x:Type viewmodels:LoginPageMV}">
            <views:LoginPage DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="AdminPanelTemplate" DataType="{x:Type viewmodels:AdminPanelMV}">
            <views:AdminPanel DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#A7A7A7">
        <ContentControl Content="{Binding}" />
    </Grid>
</Window>
