<UserControl x:Class="BD.Views.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="#82827d">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="5" Background="#82827d">
            <TextBlock   Margin="0,10"
           FontSize="34" 
           TextAlignment="Center" 
           FontWeight="Bold"
           HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="5" Direction="320" Opacity="0.5" />
                </TextBlock.Effect>
                Select 
                Button
            </TextBlock>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="1" Background="#82827d">
            <UniformGrid  Background="#82827d">
                <Button  x:Name="ustawSeName" Margin="3" 
                    Background="#F0F0F0" Foreground="Black"
                    BorderBrush="#D3D3D3" BorderThickness="1"
                    FontWeight="Bold" FontSize="18"
                    Content="Go back" Visibility="Visible" Click="Goback_Click">
                    <!-- Ustawienie nie domyslnego sylu Buttona-->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Zewnętrzna ramka -->
                                <Border x:Name="bigBorder" Background="{TemplateBinding Background}" CornerRadius="10" Padding="5">
                                    <!-- Wewnętrzny element zmieniający tło -->
                                    <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Zmiana tlla przy najechaniu -->
                                <!-- Zmiana tlla przy najechaniu -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BorderElement" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#434343"/>
                                                <GradientStop Color="White"  Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="bigBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#434343"/>
                                                <GradientStop Color="White"  Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                                <!-- Zmiana po nacisniencu -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BorderElement" Property="Background" Value="#82827d"/>
                                    <Setter TargetName="bigBorder" Property="Background" Value="#434343"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </UniformGrid>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Background="#82827d">
            <UniformGrid  Background="#82827d">
            <Button x:Name="ustawSeName2" 
                    Background="Black" Foreground="White" 
                    FontWeight="Bold" Margin="3" FontSize="10"
                     Content="Show all users" Visibility="Visible" Click="ShowAllUsers_Click">
                    <!-- Ustawienie nie domyslnego sylu-->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Zewnętrzna ramka -->
                                <Border x:Name="bigBorder" Background="Black" CornerRadius="10" Padding="5">
                                    <!-- Wewnętrzny element zmieniający tło -->
                                    <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Zmiana tlla przy najechaniu -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BorderElement" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#303030"/>
                                                <GradientStop Color="#434343"  Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="bigBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#303030"/>
                                                <GradientStop Color="#434343"  Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>

                                </Trigger>
                                <!-- Zmiana po nacisniencu -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BorderElement" Property="Background" Value="#434343"/>
                                    <Setter TargetName="bigBorder" Property="Background" Value="Black"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Button.Template>
                </Button>
            </UniformGrid>
        </DockPanel>
        <DockPanel Grid.Row="5"  Grid.ColumnSpan="5" Grid.RowSpan="3" Background="#333332" >
            <TextBox Margin="5" Background="#333332" Foreground="White" FontFamily="Arial"
             FontSize="16" Padding="10" TextWrapping="Wrap">

            </TextBox>
        </DockPanel>
        
        <DockPanel Grid.Row="4"  Grid.ColumnSpan="5" Grid.RowSpan="1" Background="#333332" >
            <TextBlock  Text="Input" TextWrapping="WrapWithOverflow" 
                        Margin="0,10" FontSize="28" 
                       TextAlignment="Center" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>        

        </DockPanel>
        <DockPanel Grid.Row="0"  Grid.Column="5" Grid.ColumnSpan="5" Grid.RowSpan="1" Background="#4f565e" >
            <TextBlock  Text="Outuput" TextWrapping="WrapWithOverflow" 
                Margin="0,10" FontSize="28" 
               TextAlignment="Center" 
               FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </DockPanel>
        <DockPanel Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="6" Grid.RowSpan="8" Background="#4f565e">
            <ScrollViewer Margin="5" Background="#4f565e">
                <TextBlock x:Name="consoleScreen" Text="SDA SDA SDA SDA SDA SDA SDA SDA SDA SDA SDA SDA SDA SDA " TextWrapping="WrapWithOverflow" FontSize="24"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
