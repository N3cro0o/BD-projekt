<UserControl x:Class="BD.Views.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2" Grid.RowSpan="4" Background="DarkRed">
            <UniformGrid Margin="5" Background="Red">
                <Button Margin="10" Content="1"/>
                <Button Margin="10" Content="2" Visibility="Visible"/>
                <Button Margin="10" Content="3" Visibility="Visible"/>
                <Button Margin="10" Content="4" Visibility="Visible"/>
                <Button Margin="10" Content="5" Visibility="Visible"/>
                <Button Margin="10" Content="6" Visibility="Visible"/>
                <Button Margin="10" Content="7" Visibility="Visible"/>
                <Button Margin="10" Content="8" Visibility="Visible"/>
                <Button Margin="10" Content="Go back" Visibility="Visible" Click="Goback_Click"/>
            </UniformGrid>
        </DockPanel>
        <DockPanel Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="4" Background="DarkGreen">
            <StackPanel Margin="5" Background="Green">
                <TextBlock Text="Input 1:" HorizontalAlignment="Center" Margin="0,60,0,10" Foreground="#dfdfdf" FontSize="14"/>
                <TextBox x:Name="AdminInput1" />
                <TextBlock Text="Input 2:" HorizontalAlignment="Center" Margin="0,25,0,10" Foreground="#dfdfdf" FontSize="14"/>
                <TextBox x:Name="AdminInput2" />
                <TextBlock Text="Input 3:" HorizontalAlignment="Center" Margin="0,25,0,10" Foreground="#dfdfdf" FontSize="14"/>
                <TextBox x:Name="AdminInput3" />
                <TextBlock Text="Input 4:" HorizontalAlignment="Center" Margin="0,25,0,10" Foreground="#dfdfdf" FontSize="14"/>
                <TextBox x:Name="AdminInput4" />
                
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
