<UserControl x:Class="BD.Views.AdminPanelUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="White" x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                x:Name="menuColumn" Width="0*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            
            
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Border CornerRadius="0" Background="#333" Margin="0" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="1">


            <TextBlock Text="Admin Panel" TextWrapping="WrapWithOverflow" 
                           FontSize="20" TextAlignment="Left" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Padding="10" Margin="10" Foreground="White">
               
            </TextBlock>
            

        </Border>
        <Border CornerRadius="0" Background="#82827d" Margin="0" 
                Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="5">
            <Grid x:Name="outputGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="mainTitle" Text="Output" TextWrapping="WrapWithOverflow" 
                           FontSize="18" TextAlignment="Center" FontWeight="Bold"
                           HorizontalAlignment="Left" VerticalAlignment="Center"
                           Padding="5" Margin="5" >
                </TextBlock>

                <DataGrid x:Name="UserTable" Grid.Row="1"
                          AutoGenerateColumns="True"
                          HeadersVisibility="Column" 
                          Margin="10" Visibility="Hidden"
                          Background="#82827d" RowBackground="#82827d">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <!-- Kolory -->
                            <Setter Property="Background" Value="#434343" />
                            <!-- Tło nagłówków -->
                            <Setter Property="Foreground" Value="White" />
                            <!-- Tekst nagłówków -->
                            <Setter Property="FontWeight" Value="Bold" />
                            <!-- Pogrubiony tekst -->
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <!-- Wyśrodkowanie tekstu -->
                            <Setter Property="Height" Value="30" />
                            <!-- Wysokość nagłówka -->

                            <!-- Zmiana koloru najechania myszką -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="Gray" BorderThickness="1">
                                            <TextBlock Text="{TemplateBinding Content}" 
                                       Foreground="{TemplateBinding Foreground}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    
                </DataGrid>
                <DataGrid x:Name="CoursesTable" Grid.Row="1"
          AutoGenerateColumns="True"
          HeadersVisibility="Column" 
          Margin="10" Visibility="Hidden"
          Background="#82827d" RowBackground="#82827d">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <!-- Kolory -->
                            <Setter Property="Background" Value="#434343" />
                            <!-- Tło nagłówków -->
                            <Setter Property="Foreground" Value="White" />
                            <!-- Tekst nagłówków -->
                            <Setter Property="FontWeight" Value="Bold" />
                            <!-- Pogrubiony tekst -->
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <!-- Wyśrodkowanie tekstu -->
                            <Setter Property="Height" Value="30" />
                            <!-- Wysokość nagłówka -->

                            <!-- Zmiana koloru najechania myszką -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}" 
                BorderBrush="Gray" BorderThickness="1">
                                            <TextBlock Text="{TemplateBinding Content}" 
                       Foreground="{TemplateBinding Foreground}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    
                </DataGrid>
            </Grid>
        </Border>
        <Border CornerRadius="0" Background="#434343" Margin="0" 
        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="5">
            <StackPanel  Grid.Row="1"  Grid.Column="1" >
                <UniformGrid  Grid.Row="1" Rows="3" Columns="1" >
                    <Button x:Name="buttonShowAllUsers" 
                            Background="#434343" Foreground="White" 
                            FontSize="10" Height="25"
                            Content="Show all users" Visibility="Visible" Click="ShowAllUsers_Click">
                        <!-- Ustawienie nie domyslnego sylu-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Zmiana tlla przy najechaniu -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BorderElement" Property="Background" Value="#303030" />

                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="buttonCourses" 
                    Background="#434343" Foreground="White" 
                     FontSize="10" Height="25"
                     Content="Courses" Visibility="Visible" Click="ShowAllCourses_Click">
                        <!-- Ustawienie nie domyslnego sylu-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <!-- Wewnętrzny element zmieniający tło -->
                                <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Zmiana tlla przy najechaniu -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BorderElement" Property="Background" Value="#303030" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="buttonQuestionPool" 
        Background="#434343" Foreground="White" 
        FontSize="10" Height="25"
        Content="Questions Pool" Visibility="Visible" Click="ShowAllQuestions_Click">
                        <!-- Ustawienie nie domyślnego stylu -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <!-- Wewnętrzny element zmieniający tło -->
                                <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Zmiana tła przy najechaniu -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BorderElement" Property="Background" Value="#303030" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="buttonStatistics" 
                            Background="#434343" Foreground="White" 
                            FontSize="10" Height="25"
                             Content="Statistics" Visibility="Visible" Click="ShowAllStatistics_Click">
                        <!-- Ustawienie nie domyslnego sylu-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <!-- Wewnętrzny element zmieniający tło -->
                                <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Zmiana tlla przy najechaniu -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BorderElement" Property="Background" Value="#303030" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Border>
        <Button x:Name="ustawSeName" VerticalAlignment="Center"  HorizontalAlignment="Right"
                Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="1" Grid.RowSpan="1"
                Background="Black" Foreground="White" 
                FontWeight="Bold" Margin="10, 0" FontSize="10" Height="30" Width="65"
                Content="Go back" Visibility="Visible" Click="Goback_Click" >
            <!-- Ustawienie nie domyslnego sylu-->
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <!-- Wewnętrzny element zmieniający tło -->
                    <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Zmiana tlla przy najechaniu -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderElement" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#303030"/>
                                        <GradientStop Color="#434343"  Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="showToolBox" 
        Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1"
        Background="White" Foreground="Black" HorizontalAlignment="Left"
        FontWeight="Bold" Margin="10,0" FontSize="10" Height="25" Width="25"
        Visibility="Visible" Click="ShowMenu_Click">
            <!-- Ustawienie nie domyślnego stylu -->
            <Button.Content>
                <TextBlock>X</TextBlock>
            </Button.Content>

            <Button.RenderTransform>
                <RotateTransform x:Name="rotateTransform" Angle="0" CenterX="12.5" CenterY="12.5"/>
            </Button.RenderTransform>

            <!-- Dodanie stylu z efektem cienia -->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Opacity="0" BlurRadius="10" />
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="2" Opacity="0.5" BlurRadius="10" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
